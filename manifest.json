{
    "name": "Tab shuffle",
    "version": "1.0",
    "description": "Shuffle tabs",
    "permissions": ["tabs", "activeTab", "declarativeContent", "notifications"],
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": {
            "16": "images/tab-shuffle-16.png",
            "32": "images/tab-shuffle-32.png",
            "48": "images/tab-shuffle-48.png",
            "64": "images/tab-shuffle-64.png"
        }
    },
    "icons": {
        "16": "images/tab-shuffle-16.png",
        "32": "images/tab-shuffle-32.png",
        "48": "images/tab-shuffle-48.png",
        "64": "images/tab-shuffle-64.png"
    },
    "manifest_version": 2
}
